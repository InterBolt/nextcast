{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2022",
    "declaration": true,
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "allowUnusedLabels": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}